@model RegisterVM

@{
    ViewData["Title"] = "Register";
}
<style>
    .register-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);
    }
    .register-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 2.5rem 2rem 2rem 2rem;
        width: 100%;
        max-width: 400px;
        margin: 2rem 0;
    }
    .register-card h3 {
        font-size: 1.7rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 1rem;
        text-align: center;
    }
    .form-group label {
        font-weight: 500;
        color: #4a5568;
    }
    .form-control {
        border-radius: 8px;
        border: 1px solid #cbd5e1;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }
    .btn-primary {
        width: 100%;
        border-radius: 8px;
        font-weight: 600;
        background: linear-gradient(90deg, #4f8cff 0%, #2355d8 100%);
        border: none;
        transition: background 0.2s;
    }
    .btn-primary:hover {
        background: linear-gradient(90deg, #2355d8 0%, #4f8cff 100%);
    }
    .text-danger {
        font-size: 0.95rem;
    }
    .back-link {
        display: block;
        text-align: center;
        margin-top: 1.5rem;
        color: #4f8cff;
        text-decoration: none;
        font-weight: 500;
    }
    .back-link:hover {
        text-decoration: underline;
        color: #2355d8;
    }
</style>
<div class="register-container">
    <div class="register-card">
        <form asp-action="Register" method="post" asp-controller="Account">
            <img src="@Url.Content("~/images/Asset1.png")" alt="Login" style="width: 60px; margin-bottom: 10px;margin-top: 10px; display: block; margin-left: auto; margin-right: auto;" />
            <h3>Create an Account</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" value="Create" class="btn btn-primary">Register</button>
            </div>
        </form>
        @section scripts{
            <partial name="_ValidationScriptsPartial"/>
        }
        <div class="text-center mt-4">
            <a asp-action="Login" asp-controller="Account" class="text-secondary text-decoration-none"><i class="bi bi-arrow-left"></i> Back to Login</a>
        </div>
    </div>
</div>

